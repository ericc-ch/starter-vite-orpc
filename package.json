{
  "name": "starter-vite-orpc",
  "version": "0.0.0",
  "description": "A starter kit for a Vite + oRPC",
  "type": "module",
  "workspaces": [
    "./apps/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "eslint --cache --fix",
    "prepare": "bun run ./scripts/prepare.ts",
    "start": "turbo run start",
    "typegen": "turbo run typegen"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint --fix"
  },
  "devDependencies": {
    "@echristian/eslint-config": "^0.0.53",
    "@types/bun": "^1.2.20",
    "eslint": "^9.33.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.20",
  "catalogs": {
    "cloudflare": {
      "wrangler": "4.30.x"
    }
  }
}
