{
  "name": "starter-vite-orpc",
  "version": "0.0.0",
  "description": "A starter kit for a Vite + oRPC",
  "type": "module",
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "auth:generate": "bun run ./scripts/auth-generate.ts",
    "build": "turbo run build",
    "db:generate": "bun run ./scripts/db-generate.ts",
    "deploy": "alchemy deploy",
    "dev": "alchemy dev",
    "lint": "eslint --cache",
    "prepare": "simple-git-hooks",
    "start": "turbo run start",
    "typecheck": "tsc --build"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint --fix"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.29",
    "@cloudflare/workers-types": "^4.20251014.0",
    "@echristian/eslint-config": "^0.0.54",
    "@types/bun": "^1.3.0",
    "alchemy": "^0.76.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "packageManager": "bun@1.3.1",
  "catalogs": {
    "default": {
      "zod": "^4.1.5"
    },
    "better-auth": {
      "better-auth": "^1.3.7"
    },
    "cloudflare": {
      "wrangler": "^4.33.1",
      "@cloudflare/workers-types": "^4.20250902.0"
    },
    "drizzle": {
      "drizzle-kit": "^0.31.4",
      "drizzle-orm": "^0.44.5",
      "drizzle-zod": "^0.8.3"
    },
    "orpc": {
      "@orpc/client": "^1.8.6",
      "@orpc/contract": "^1.8.6",
      "@orpc/openapi": "^1.8.6",
      "@orpc/openapi-client": "^1.8.6",
      "@orpc/server": "^1.8.6"
    }
  }
}
