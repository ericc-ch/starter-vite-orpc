{
  "name": "starter-vite-orpc",
  "version": "0.0.0",
  "description": "A starter kit for a Vite + oRPC",
  "type": "module",
  "workspaces": [
    "./apps/*",
    "./packages/*"
  ],
  "scripts": {
    "auth:generate": "bun run ./scripts/auth-generate.ts",
    "build": "turbo run build",
    "db:generate": "bun run ./scripts/db-generate.ts",
    "dev": "turbo run dev",
    "lint": "eslint --cache --fix",
    "prepare": "bun run ./scripts/prepare.ts",
    "start": "turbo run start",
    "typegen": "turbo run typegen"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged"
  },
  "lint-staged": {
    "*": "bun run lint --fix"
  },
  "devDependencies": {
    "@better-auth/cli": "^1.3.7",
    "@echristian/eslint-config": "^0.0.53",
    "@types/bun": "^1.2.20",
    "drizzle-kit": "catalog:drizzle",
    "eslint": "^9.33.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.5",
    "typescript": "^5.9.2"
  },
  "packageManager": "bun@1.2.20",
  "catalogs": {
    "default": {
      "zod": "^4.0.17"
    },
    "cloudflare": {
      "wrangler": "^4.30.0"
    },
    "drizzle": {
      "drizzle-kit": "^0.31.4",
      "drizzle-orm": "^0.44.4",
      "drizzle-zod": "^0.8.3"
    },
    "orpc": {
      "@orpc/client": "^1.8.1",
      "@orpc/contract": "^1.8.1",
      "@orpc/server": "^1.8.1"
    }
  }
}
