{
  "compilerOptions": {
    "target": "ES2022",
    "skipLibCheck": true,
    "allowJs": true,

    "module": "ES2022",
    "moduleResolution": "bundler",
    "erasableSyntaxOnly": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },

  "references": [
    { "path": "./apps/web" },
  ],

  "files": []
}
